<article>
<header>
<h2><%= @job.company %> - <%= @job.title %></h2>
</header>
<p><%= @job.description %></p>
<table>
<tr>
<th>Skill:</th>
<td><%= @job.skill %></td>
</tr>
<tr>
<th>Location:</th>
<td><%= @job.location %></td>
</tr>
</table>
</article>

<% if current_employer?(@employer) %>
<%= link_to "Edit", edit_job_path(@job) %> 
<% end %>
<% if current_candidate_admin? || current_employer_admin? %>
| <%= link_to 'Delete', job_path(@job), method: :delete, data: {confirm: "Are You Sure?"} %>
<% end %>